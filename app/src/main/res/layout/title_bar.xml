<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#7cd12e"
                android:orientation="vertical"
                android:padding="8dp"
                android:fitsSystemWindows="true"
                android:clipToPadding="true"
>
 <TextView android:id="@+id/main_center_text"
           style="@style/TopTitleTextStyle"
           android:layout_centerInParent="true"
           android:text="个人信息"
           android:visibility="gone"
 />

 <LinearLayout android:id="@+id/ll_button"
               android:layout_width="120dp"
               android:layout_height="30dp"
               android:layout_centerInParent="true"
               android:visibility="gone"
               android:background="@drawable/shap_top_buton"
               android:orientation="horizontal">
  <Button
   android:id="@+id/btn_friend"
   android:layout_width="0dp"
   android:layout_weight="1"
   android:layout_height="match_parent"
   android:text="好友"
   android:textSize="16sp"
   android:layout_gravity="center"
   android:textColor="@color/maincolor"
   android:background="@drawable/selector_center_button"
  />
  <Button
   android:id="@+id/btn_group"
   android:layout_width="0dp"
   android:layout_height="match_parent"
   android:layout_weight="1"
   android:text="群组"
   android:gravity="center"
   android:textSize="16sp"
   android:textColor="@android:color/white"
   android:background="@drawable/selector_center_button"
  />


 </LinearLayout>

 <TextView android:id="@+id/main_right_text"
           style="@style/TopTitleTextStyle"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:text="其他登录"
           android:visibility="gone"
 />
 <TextView android:id="@+id/main_left_login"
           style="@style/TopTitleTextStyle"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:text="登录"
           android:visibility="gone"
 />

 <TextView style="@style/TopTitleTextStyle"
           android:id="@+id/tv_back"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:text="朋友圈"
           android:drawableLeft="@mipmap/back"
           android:drawablePadding="3dp"
           android:padding="2dp"
           android:visibility="gone"

 />

 <TextView android:id="@+id/main_left_regist"
           style="@style/TopTitleTextStyle"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/main_left_login"
           android:paddingLeft="8dp"
           android:text="注册"
           android:visibility="gone"
 />

</RelativeLayout>