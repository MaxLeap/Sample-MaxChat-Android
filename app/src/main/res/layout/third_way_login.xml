<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
>

 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:text="使用其他方式登录"
           android:textColor="#9000"
           android:textSize="16sp"
 />
 <LinearLayout android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="horizontal"
               android:padding="20dp"
 >
  <ImageView android:id="@+id/qq_loginn" android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@mipmap/qq"
  />
  <ImageView android:id="@+id/weibo_login" android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_marginLeft="40dp"
             android:src="@mipmap/weibo"
  />
  <ImageView android:id="@+id/wechat_login" android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_marginLeft="40dp"
             android:src="@mipmap/wechat"
  />

 </LinearLayout>

</LinearLayout>