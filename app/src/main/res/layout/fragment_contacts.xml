<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ImageView android:layout_width="match_parent" android:layout_height="1dp"
  android:background="#cccccc"
             android:id="@+id/iv_line"
             android:layout_marginTop="49dp"
             android:visibility="gone"
  />

 <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
           android:id="@+id/contacts_listview"
           android:layout_marginTop="50dp"
           android:visibility="gone"
 />
 <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
           android:id="@+id/group_listview"
           android:layout_marginTop="50dp"
           android:visibility="gone"
 />

</RelativeLayout>