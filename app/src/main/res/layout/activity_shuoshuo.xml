<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

 <include layout="@layout/title_bar"/>

 <LinearLayout android:layout_width="match_parent"
               android:layout_height="150dp"
               android:orientation="vertical"
 >
  <EditText android:id="@+id/et_shuoshuo" android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/shuoshuo"
            android:textColor="@android:color/black"
            android:singleLine="false"
            android:gravity="top"
            android:padding="2dp"
  />

  <ImageView android:id="@+id/iv_add_photo" android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="10dp"
             android:src="@mipmap/add"
  />


 </LinearLayout>


 <ImageView android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#cccccc"
 />


 <RelativeLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_horizontal"
                 android:padding="8dp"
 >

  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="发布到广场"
            android:textColor="@android:color/black"

            android:textSize="18sp"
  />

  <ImageView android:layout_width="50sp" android:layout_height="50sp"
             android:layout_alignParentRight="true"
             android:src="@mipmap/off"
  />
 </RelativeLayout>

 <ImageView android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#cccccc"
 />

</LinearLayout>